<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.NoTitleBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="TextViewStyle">
        <item name="android:layout_marginLeft">@dimen/blockMarginLeft</item>
        <item name="android:layout_marginRight">@dimen/textMarginRight</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="IconImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/imageMarginLeft</item>
    </style>


</resources>
